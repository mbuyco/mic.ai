#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
SECRETS_DIR="$ROOT_DIR/secrets"

required=(
  admin_api_key
  whatsapp_verify_token
  whatsapp_access_token
  whatsapp_phone_number_id
)

for name in "${required[@]}"; do
  file="$SECRETS_DIR/$name"
  if [[ -f "$file" ]]; then
    chmod 644 "$file"
  fi
done
